xontrib vox
$XONSH_TRACEBACK_LOGFILE = $HOME + '/.error_log'  

$PATH.append($HOME + '/scripts/bin')
$PATH.append('/usr/local/bin')
$PATH.append('/home/deku/.local/bin')
$PATH.append('/sbin')


source @($HOME + '/SysPy/syspy/shell.py')
sh = Shell()

aliases['c'] = 'clear'
aliases['pt'] = 'touch __init__.py; mkdir -p tests; touch tests/__init__.py'

def _src():
	python3 @($HOME + '/scripts/scripts.py')
aliases['src'] = _src

def _up():
	cd ..
	t
	return 0
aliases['up'] = _up

def _dn(args):
	if len(args) > 1:
		raise TypeError('too many input arguments')
	if len(args) == 0:
		cd
		t
		return 0
	cd @(args[0])
	t
	return 0
aliases['dn'] = _dn

# some customization options, see https://xon.sh/envvars.html for details
$MULTILINE_PROMPT = '`·.,¸,.·*¯'
$VI_MODE = True
$VISUAL = 'vim'
